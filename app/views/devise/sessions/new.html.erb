<div id="logo">
  <img src="/assets/logo.png">
</div>

<div class="text-center" id="quote">
  <div class="trans-bgrd text-center">
    <h2>Please log in.</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
  </div>
</div>

<div class="text-center" id="buttons">
  <div class="inline-content">
    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>

<div class="text-center" id="color-bar">
  <div id="yellow"></div>
  <div id="blue"></div>
  <div id="red"></div>
  <div id="green"></div>
</div>
